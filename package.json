{
  "name": "installment-tracker",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "CC-BY-NC-4.0",
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "quality": "run-s format:check lint:check type-check",
    "quality:fix": "run-s format lint:fix",
    "pre-commit": "run-s quality",
    "prepare": "husky",
    "generate-icons": "node scripts/generate-icons.js"
  },
  "dependencies": {
    "chart.js": "^4.5.0",
    "pinia": "^3.0.3",
    "vue": "^3.5.18",
    "vue-chartjs": "^5.3.2",
    "vue-i18n": "12.0.0-alpha.3"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.16.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "~10.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "lint-staged": "^16.1.5",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.0",
    "vite": "^7.0.6",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vue-tsc": "^3.0.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue,mjs,cjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml,css,scss,less}": [
      "prettier --write"
    ]
  }
}
